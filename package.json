{
  "name": "task-management-application",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/task-management-application/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/task-management-application/test/jest-e2e.json",
    "start:user:service": "nest start user-service",
    "start:user:service:prod": "node dist/apps/user-service/main.js",
    "start:task:service": "nest start task-service",
    "start:task:service:prod": "node dist/apps/task-service/main.js",
    "start:notification:service": "nest start notification-service",
    "start:notification:service:prod": "node dist/apps/notification-service/main.js",
    "build:user:service": "nest build user-service",
    "build:task:service": "nest build task-service",
    "build:notification:service": "nest build notification-service",
    "prisma:generate": "npm run prisma:generate:user && npm run prisma:generate:task",
    "prisma:generate:user": "npx prisma generate --schema=apps/user-service/prisma/schema.prisma",
    "prisma:migrate:user": "npx prisma migrate dev --schema=apps/user-service/prisma/schema.prisma --name",
    "prisma:migrate:user:deploy": "npx prisma migrate deploy --schema=apps/user-service/prisma/schema.prisma",
    "prisma:reset:user": "npx prisma migrate reset --schema=apps/user-service/prisma/schema.prisma",
    "prisma:generate:task": "npx prisma generate --schema=apps/task-service/prisma/schema.prisma",
    "prisma:migrate:task": "npx prisma migrate dev --schema=apps/task-service/prisma/schema.prisma --name",
    "prisma:migrate:task:deploy": "npx prisma migrate deploy --schema=apps/task-service/prisma/schema.prisma",
    "prisma:studio:task": "npx prisma studio --schema=apps/task-service/prisma/schema.prisma",
    "prisma:reset:task": "npx prisma migrate reset --schema=apps/task-service/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.2",
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.6.1",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.2",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/kafkajs": "^1.9.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
